<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/tVTitre_results"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tVMoyenne"
                android:layout_weight="1"
                android:text="@string/tVMoyenne"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tVMoyenne_result"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tVEcart_type"
                android:layout_weight="1"
                android:text="@string/tVEcart_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tVEcart_type_results"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/chart"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        />
</LinearLayout>