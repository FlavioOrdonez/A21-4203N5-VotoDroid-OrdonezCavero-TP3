<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center_horizontal" >


<TextView
        android:id="@+id/textView_question"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/textView_question"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="66dp" />


    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/textView_question"
        android:autofillHints="@string/textView_question" />

    <Button
        android:id="@+id/btn_poserQuestion"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/greyblue"
        android:text="@string/btn_poserQuestion"
        android:textColor="@color/black" />
</LinearLayout>